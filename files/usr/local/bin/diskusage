#!/bin/bash
cd /
du -sh * --exclude=proc/* | sort -rh | head -8
printf '%50s\n' | tr ' ' -
du -sh * --exclude=proc/* | sort -rh | head -8 | {
    while IFS= read -r line; do
        read WEIGHT DIR <<< $line
        echo $DIR/
        du -sh /$DIR/* --exclude=proc/* | sort -rh | head -4 | {
            while IFS= read -r line2; do
                echo -e "\t$line2"
            done
        }
    done 
}

